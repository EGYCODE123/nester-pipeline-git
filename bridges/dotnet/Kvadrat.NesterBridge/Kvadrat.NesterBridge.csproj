<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{A1B2C3D4-E5F6-7890-ABCD-EF1234567890}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>Kvadrat.NesterBridge</RootNamespace>
    <AssemblyName>Kvadrat.NesterBridge</AssemblyName>
    <TargetFrameworkVersion>v4.8</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <Deterministic>true</Deterministic>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' AND Exists('Kvadrat.NesterBridge.snk') ">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Kvadrat.NesterBridge.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  
  <!-- ILMerge configuration: merged DLL name -->
  <PropertyGroup>
    <MergedAssemblyName>Kvadrat.NesterBridge.Merged.dll</MergedAssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Xml" />
    <Reference Include="Newtonsoft.Json, Version=13.0.0.0, Culture=neutral, PublicKeyToken=30ad4fe6b2a6aeed, processorArchitecture=MSIL">
      <HintPath>..\packages\Newtonsoft.Json.13.0.3\lib\net45\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Include="EffClient.cs" />
    <Compile Include="EfficiencyResult.cs" />
    <Compile Include="NesterResponseDto.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="packages.config" />
  </ItemGroup>
  
  <!-- ILMerge target: merge Newtonsoft.Json into main DLL after build -->
  <Target Name="AfterBuild" Condition="'$(Configuration)' == 'Release'">
    <PropertyGroup>
      <ILMergePath>$(MSBuildThisFileDirectory)..\tools\ILMerge.exe</ILMergePath>
      <MergedOutputPath>$(TargetDir)ILMerge\</MergedOutputPath>
    </PropertyGroup>
    
    <!-- Check if ILMerge exists -->
    <PropertyGroup Condition="Exists('$(ILMergePath)')">
      <ILMergeAvailable>true</ILMergeAvailable>
    </PropertyGroup>
    
    <Message Text="ILMerge path: $(ILMergePath)" Condition="'$(ILMergeAvailable)' == 'true'" />
    <Message Text="ILMerge not found at $(ILMergePath). Skipping merge. Please run build_with_ilmerge.ps1 instead." Condition="'$(ILMergeAvailable)' != 'true'" />
    
    <!-- Create output directory -->
    <MakeDir Directories="$(MergedOutputPath)" Condition="'$(ILMergeAvailable)' == 'true'" />
    
    <!-- Find Newtonsoft.Json DLL -->
    <ItemGroup Condition="'$(ILMergeAvailable)' == 'true'">
      <InputAssemblies Include="$(TargetPath)" />
      <NewtonsoftJsonPath Include="$(MSBuildThisFileDirectory)..\packages\Newtonsoft.Json.13.0.3\lib\net45\Newtonsoft.Json.dll" />
    </ItemGroup>
    
    <!-- Run ILMerge -->
    <Exec Command="&quot;$(ILMergePath)&quot; /lib:&quot;$(TargetDir)&quot; /out:&quot;$(MergedOutputPath)$(MergedAssemblyName)&quot; /target:library /targetplatform:v4,&quot;$([System.Runtime.InteropServices.RuntimeEnvironment]::GetRuntimeDirectory())&quot; /internalize &quot;$(TargetPath)&quot; &quot;@(NewtonsoftJsonPath)&quot;" 
          Condition="'$(ILMergeAvailable)' == 'true' AND Exists('@(NewtonsoftJsonPath)')"
          ContinueOnError="false" />
    
    <Message Text="Merged DLL created at: $(MergedOutputPath)$(MergedAssemblyName)" Condition="Exists('$(MergedOutputPath)$(MergedAssemblyName)')" />
  </Target>
  
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>

